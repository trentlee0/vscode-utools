{
  "name": "utools",
  "displayName": "uTools",
  "description": "uTools plugin development extension for Visual Studio Code",
  "version": "1.0.2",
  "icon": "icon.png",
  "publisher": "trentlee",
  "author": {
    "name": "Trent Lee"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trentlee0/vscode-utools.git"
  },
  "homepage": "https://github.com/trentlee0/vscode-utools#readme",
  "bugs": {
    "url": "https://github.com/trentlee0/vscode-utools/issues"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Linters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/plugin.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "utools.createConfig",
        "title": "%ext.command.createConfig.title%",
        "category": "uTools"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "plugin.json",
        "url": "./plugin-config-schema.json"
      }
    ],
    "snippets": [
      {
        "language": "json",
        "path": "./plugin-config-snippet.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/l10n-dev": "^0.0.26",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
